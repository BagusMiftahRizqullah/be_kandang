generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  no_telephone String
  email        String   @unique
  password     String
  role         String
  createdAt    DateTime @default(now())
  updateAt     DateTime @updatedAt
  Auth         Auth[]

  @@map("users")
}

model Auth {
  id        Int      @id @default(autoincrement())
  id_user   Int
  token     String
  otp       String
  exp_token DateTime
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  user User @relation(fields: [id_user], references: [id])

  @@map("auths")
}
